view swiper {
  height: 750rpx;
}
view swiper image {
  width: 100%;
  height: 100%;
}
view .goods-info-box {
  padding: 10px;
  padding-right: 0;
}
view .goods-info-box .price {
  color: #c00000;
  font-size: 18px;
  margin: 10px 0;
}
view .goods-info-box .goods-info-body {
  display: flex;
  justify-content: space-between;
}
view .goods-info-box .goods-info-body .goods-name {
  font-size: 13px;
  padding-right: 10px;
}
view .goods-info-box .goods-info-body .favi {
  width: 120px;
  font-size: 12px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1px solid #efefef;
  color: gray;
}
view .goods-info-box .yf {
  margin: 10px 0;
  font-size: 12px;
  color: gray;
}
view .goods-detail {
  padding-bottom: 50px;
}
view .goods-nav {
  background-color: white;
  position: -webkit-sticky;
  position: sticky;
  bottom: 0;
}
view .isFull {
  padding-bottom: 20px;
}

